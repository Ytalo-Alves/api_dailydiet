{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"], // ajuste o caminho conforme necessário
    "outDir": "./dist", // define o diretório de saída para os arquivos compilados
    "rootDir": "./src" // define o diretório raiz dos arquivos de entrada
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
